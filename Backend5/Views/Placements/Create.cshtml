@model Backend5.Models.ViewModels.PlacementCreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add placement in Ward: @ViewBag.Ward.Name</h2>

<form asp-action="Create" asp-route-wardId="@ViewBag.Ward.Id">
    <div class="form-horizontal">
        <h4>Placement</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Bed" class="control-label"></label>
            <input asp-for="Bed" class="form-control" />
            <span asp-validation-for="Bed" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PatientId" class="control-label"></label>
            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
            <span class="text-danger" asp-validation-for="PatientId"></span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-wardId="@ViewBag.Ward.Id">Back to List</a>
</div>

 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
