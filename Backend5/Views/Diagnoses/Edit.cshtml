@model Backend5.Models.ViewModels.DiagnosisCreateAndEditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Diagnosis for @ViewBag.Diagnosis.Patient.Name</h2>

<form asp-action="Edit" asp-route-patientId="@ViewBag.Diagnosis.PatientId" asp-route-diagnosisId="@ViewBag.Diagnosis.DiagnosisId">
    <div class="form-horizontal">
        <h4>Diagnosis</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Complications" class="control-label"></label>
            <input asp-for="Complications" class="form-control" />
            <span asp-validation-for="Complications" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control" />
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-patientId="@ViewBag.Diagnosis.PatientId">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
